{
  "name": "tweetdeck_emoji",
  "version": "1.1.0",
  "manifest_version": 3,
  "description": "replace emoji",
  "browser_action": {
    "default_title": "emoji"
  },
  "permissions": [
    "<all_urls>",
    "tabs",
    "webNavigation"
  ],
  "background": {
		"scripts": ["background.js"]
	},
  "content_scripts": [{
    "matches": ["https://tweetdeck.twitter.com/"],
    "js": [
      "node_modules/axios/dist/axios.min.js",
      "replace.js",
      "node_modules/jquery/dist/jquery.min.js"
    ],
    "run_at": "document_end"
  }]
}
